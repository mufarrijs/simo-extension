// ok basically this is the file that tells chrome what my extension is called
// what it can do and what permissions it needs
//  kamen it sets up the keyboard shortcuts that i chose Ctrl+Shift+1 w hek

{
  "manifest_version": 3,
  "name": "Simo Extension",
  "version": "1.0",
  "description": "Thats to copy multiple items and paste them individually",
  
  "permissions": [
    "storage",
    "activeTab",
    "clipboardRead",
    "clipboardWrite"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Multi-Clipboard Manager"
  },
  
  "commands": {
    "paste-item-1": {
      "suggested_key": {
        "default": "Ctrl+Shift+1"
      },
      "description": "Paste clipboard item 1"
    },
    "paste-item-2": {
      "suggested_key": {
        "default": "Ctrl+Shift+2"
      },
      "description": "Paste clipboard item 2"
    },
    "paste-item-3": {
      "suggested_key": {
        "default": "Ctrl+Shift+3"
      },
      "description": "Paste clipboard item 3"
    },
    "paste-item-4": {
      "suggested_key": {
        "default": "Ctrl+Shift+4"
      },
      "description": "Paste clipboard item 4"
    },
    "paste-item-5": {
      "suggested_key": {
        "default": "Ctrl+Shift+5"
      },
      "description": "Paste clipboard item 5"
    },
    "paste-item-6": {
      "suggested_key": {
        "default": "Ctrl+Shift+6"
      },
      "description": "Paste clipboard item 6"
    },
    "paste-item-7": {
      "suggested_key": {
        "default": "Ctrl+Shift+7"
      },
      "description": "Paste clipboard item 7"
    },
    "paste-item-8": {
      "suggested_key": {
        "default": "Ctrl+Shift+8"
      },
      "description": "Paste clipboard item 8"
    },

        "paste-item-9": {
      "suggested_key": {
        "default": "Ctrl+Shift+9"
      },
      "description": "Paste clipboard item 9"
    },
    
    "clear-clipboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+Delete"
      },
      "description": "Clear all clipboard items"
    }
  }
}